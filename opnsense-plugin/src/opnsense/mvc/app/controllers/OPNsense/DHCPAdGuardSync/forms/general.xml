<?xml version="1.0"?>
<form>
    <field>
        <id>dhcpadguardsync.general.enabled</id>
        <label>Enable Service</label>
        <type>checkbox</type>
        <help>Enable the DHCP AdGuard Sync service</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_url</id>
        <label>AdGuard Home URL</label>
        <type>text</type>
        <help>AdGuard Home URL (e.g. 127.0.0.1:3000)</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_username</id>
        <label>AdGuard Home Username</label>
        <type>text</type>
        <help>AdGuard Home username for authentication</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_password</id>
        <label>AdGuard Home Password</label>
        <type>password</type>
        <help>AdGuard Home password for authentication</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_scheme</id>
        <label>Connection Scheme</label>
        <type>dropdown</type>
        <help>Connection scheme (HTTP or HTTPS)</help>
        <default>http</default>
        <options>
            <option value="http">HTTP</option>
            <option value="https">HTTPS</option>
        </options>
    </field>
    <field>
        <id>dhcpadguardsync.general.dhcp_server</id>
        <label>DHCP Server Type</label>
        <type>dropdown</type>
        <help>Select your DHCP server type (automatically sets lease file path and format)</help>
        <default>isc</default>
        <options>
            <option value="isc">ISC DHCP (OPNsense default)</option>
            <option value="dnsmasq">DNSMasq</option>
            <option value="custom">Custom (manual configuration)</option>
        </options>
    </field>
    <field>
        <id>dhcpadguardsync.general.lease_path</id>
        <label>DHCP Lease File Path</label>
        <type>text</type>
        <help>Path to the DHCP lease file (auto-filled based on DHCP server type)</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.lease_format</id>
        <label>Lease File Format</label>
        <type>dropdown</type>
        <help>Format of the DHCP lease file (auto-selected based on DHCP server type)</help>
        <default>isc</default>
        <options>
            <option value="isc">ISC DHCP</option>
            <option value="dnsmasq">DNSMasq</option>
        </options>
    </field>
    <field>
        <id>dhcpadguardsync.general.preserve_deleted_hosts</id>
        <label>Preserve Deleted Hosts</label>
        <type>checkbox</type>
        <help>Don't remove AdGuard clients when their DHCP leases expire</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.debug</id>
        <label>Debug Mode</label>
        <type>checkbox</type>
        <help>Enable debug logging (more verbose output)</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.log_level</id>
        <label>Log Level</label>
        <type>dropdown</type>
        <help>Log verbosity level</help>
        <default>info</default>
        <options>
            <option value="error">Error</option>
            <option value="warn">Warning</option>
            <option value="info">Info</option>
            <option value="debug">Debug</option>
        </options>
    </field>
</form>
