<?xml version="1.0"?>
<form>
    <field>
        <id>dhcpadguardsync.general.enabled</id>
        <label>Enable Service</label>
        <type>checkbox</type>
        <help>Enable the DHCP AdGuard Sync service</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_url</id>
        <label>AdGuard Home URL</label>
        <type>text</type>
        <help>AdGuard Home URL (e.g. 127.0.0.1:3000)</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_username</id>
        <label>AdGuard Home Username</label>
        <type>text</type>
        <help>AdGuard Home username for authentication</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.adguard_password</id>
        <label>AdGuard Home Password</label>
        <type>password</type>
        <help>AdGuard Home password for authentication</help>
    </field>
    <field>
        <id>dhcpadguardsync.general.dhcp_server</id>
        <label>DHCP Server Type</label>
        <type>dropdown</type>
        <help>Select your DHCP server type</help>
        <default>dnsmasq</default>
        <options>
            <option value="dnsmasq">DNSMasq (Default)</option>
            <option value="isc">ISC DHCP (Legacy)</option>
        </options>
    </field>
</form>
