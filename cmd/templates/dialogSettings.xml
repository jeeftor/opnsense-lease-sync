<?xml version="1.0" encoding="UTF-8"?>
<form>
    <field>
        <id>settings.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>Enable DHCP AdGuard Sync service</help>
        <grid_view>
            <width>6em</width>
            <type>boolean</type>
            <formatter>rowtoggle</formatter>
        </grid_view>
    </field>
    <field>
        <id>settings.adguardUrl</id>
        <label>AdGuard URL</label>
        <type>text</type>
        <help>AdGuard Home URL (e.g., 127.0.0.1:3000)</help>
    </field>
    <field>
        <id>settings.username</id>
        <label>Username</label>
        <type>text</type>
        <help>AdGuard Home username</help>
    </field>
    <field>
        <id>settings.password</id>
        <label>Password</label>
        <type>password</type>
        <help>AdGuard Home password</help>
    </field>
    <field>
        <id>settings.scheme</id>
        <label>Scheme</label>
        <type>dropdown</type>
        <help>Connection scheme (http/https)</help>
        <options>
            <option>
                <value>http</value>
                <name>HTTP</name>
            </option>
            <option>
                <value>https</value>
                <name>HTTPS</name>
            </option>
        </options>
    </field>
    <field>
        <id>settings.leasePath</id>
        <label>DHCP Lease Path</label>
        <type>text</type>
        <help>Path to DHCP leases file</help>
    </field>
    <field>
        <id>settings.leaseFormat</id>
        <label>Lease Format</label>
        <type>dropdown</type>
        <help>DHCP lease file format</help>
        <options>
            <option>
                <value>isc</value>
                <name>ISC DHCP</name>
            </option>
            <option>
                <value>dnsmasq</value>
                <name>Dnsmasq</name>
            </option>
        </options>
    </field>
    <field>
        <id>settings.preserveDeletedHosts</id>
        <label>Preserve Deleted Hosts</label>
        <type>checkbox</type>
        <help>Don't remove AdGuard clients when their DHCP leases expire</help>
    </field>
    <field>
        <id>settings.logLevel</id>
        <label>Log Level</label>
        <type>dropdown</type>
        <help>Log verbosity level</help>
        <options>
            <option>
                <value>error</value>
                <name>Error</name>
            </option>
            <option>
                <value>warn</value>
                <name>Warning</name>
            </option>
            <option>
                <value>info</value>
                <name>Info</name>
            </option>
            <option>
                <value>debug</value>
                <name>Debug</name>
            </option>
        </options>
    </field>
</form>
