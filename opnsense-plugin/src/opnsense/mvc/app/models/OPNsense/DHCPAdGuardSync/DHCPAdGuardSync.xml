<?xml version="1.0"?>
<model>
    <mount>//OPNsense/DHCPAdGuardSync</mount>
    <description>DHCP AdGuard Sync settings</description>
    <version>1.0.0</version>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </enabled>
            <adguard_url type="TextField">
                <default>127.0.0.1:3000</default>
                <Required>Y</Required>
            </adguard_url>
            <adguard_username type="TextField">
                <Required>Y</Required>
            </adguard_username>
            <adguard_password type="TextField">
                <Required>Y</Required>
            </adguard_password>
            <dhcp_server type="OptionField">
                <default>dnsmasq</default>
                <Required>Y</Required>
                <OptionValues>
                    <dnsmasq>DNSMasq (Default)</dnsmasq>
                    <isc>ISC DHCP (Legacy)</isc>
                </OptionValues>
            </dhcp_server>
        </general>
    </items>
</model>
